<p id="notice"><%= notice %></p>

<div class="container">
 <h1>tu eres la lista de pins </h1>
  <div class="col-md-3">
    <div class="thumbnail">
    <% @pins.each do |pin| %>
  <%=  pin.name %>
    <%=image_tag(pin.photo,:style => 'width:300px') %>
      <%= pin.description %>
    <div class="buttons" style="margin-top:10px; margin-buttom:10px">
    <%= link_to 'Show', pin, :class=>'btn' %>
    <%= link_to 'Edit', edit_pin_path(pin), :class=>'btn' %>
    <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn' %>
     </div>
  </div>
</div>
  <% end %>
  <br>
  <%= link_to 'New Pin', new_pin_path %>
</div>

